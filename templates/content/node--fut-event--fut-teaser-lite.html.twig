{% extends 'node--fut-teaser.html.twig' %}

  {% block teaser_header %}
    {% include '@cnectlib/cnect-teaser-header/cnect-teaser-header.html.twig' with {
      'group_label': _group_label,
      'group_name': _group_name,
      'group_image': group_image,
      'group_url': group_url,
      'content_type_name': NULL,
    } %}
  {% endblock teaser_header %}

  {% block teaser_body_label %}
    {{ content.fut_event_date }} - {{ label }}
  {% endblock teaser_body_label %}

  {% block teaser_body_content %}
    {{ content | without('fut_event_date') }}
  {% endblock teaser_body_content %}

  {% block teaser_footer_meta %} 
      {% include '@cnectlib/cnect-contentmeta/cnect-contentmeta.html.twig' with {
        'avatar': NULL,
        'author_name': NULL,
        'date_prefix': 'posted the ',
        'date': date,
      } %}
  {% endblock teaser_footer_meta %}
  