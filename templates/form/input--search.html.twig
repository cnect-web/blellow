{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 * - is_disabled: Optional (boolean): is disabled (optional, default: false).
 * - has_error: Optional (boolean): has error (optional, default: false).
 * - extra_attributes: Optional (boolean): additional attributes (optional, default: false).
 *
 * @see ./core/themes/stable/templates/form/input.html.twig
 */
#}
{% set ecl_array = element.ecl_array %}
{% include '@ecl/generic-component-form-text-input' with {
  'id': ecl_array.id,
  'name': ecl_array.name,
  'has_error': ecl_array.has_error,
  'is_disabled': ecl_array.disabled,
  'type': ecl_array.type,
  'extra_classes': ecl_array.class|safe_join(' '),
  'extra_attributes': ecl_array.extra_attributes,
} %}
