{% set _group_label = group_label|default('') %}
{% set _group_name = group_name|default('') %}
{% set _group_image = group_image|default([]) %}
{% set _group_url = group_url|default('') %}
{% set _content_type_name = content_type_name|default('') %}
{% set _css_class = 'teaser__header' %}

<div class="{{ _css_class }}">
  
  {% if _group_url is not empty %}
  <div class="teaser__group-info">
    <a href="{{ _group_url }}" title="{{ _group_label }}">
      {% if _group_image is not empty %}
        <span class="teaser__group-image">{{ _group_image }}</span>
      {% endif %}
      {% if _group_name is not empty %}
        <span class="teaser__group-name">{{ _group_name }}</span>
      {% endif %}
    </a>
  </div>
  {% endif %}

  {% if _content_type_name is not empty %}
      <div class="teaser__content-type-name">{{ _content_type_name }}</div>
  {% endif %}
</div>