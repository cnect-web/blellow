{#
/**
 * @file
 * Theme override to display a single page.
 *
 * @see ./core/themes/stable/templates/layout/page.html.twig
 */
#}

{% block site_header %}
<header class="ecl-site-header" role="banner">
  {# TODO: Where this verbose markup belongs to? here or withing the login widget? #}
  <div class="cnect-site-header__top-bar">
    <div class="ecl-container ">
      {{ page.site_top_bar }}
    </div>
  </div>
  <div class="ecl-container ecl-site-header__banner">
    {{ page.site_header }}
  </div>
</header>
{% endblock %}

{% block page_header %}
  {% if page.page_header %}
    {{ page.page_header }}
  {% endif %}
{% endblock %}

{% block navigation %}
  {{ page.navigation }}
{% endblock %}

{% block content %}
<section class="main-content ecl-u-mv-l">
  <div class="ecl-container">
    <div class="ecl-row">
      <div class="ecl-col">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>
{% endblock %}

{% if page.footer %}
  {% block footer %}
    {{ page.footer }}
  {% endblock %}
{% endif %}

